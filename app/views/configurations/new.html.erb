<h1>New configuration</h1>

<% form_for(@configuration) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :conf_type %><br />
    <%= select(:configuration, :conf_type, [['host configuration', 1], ['service configuration', 2]]) %> 
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "60x12" %>
  </p>
  <p>
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', configurations_path %>
